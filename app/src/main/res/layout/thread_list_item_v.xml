<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thread_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_gravity="center"
    android:background="@drawable/message_bubble"
    >

        <TextView
            android:text="+087986787678"
            android:id="@+id/thread_person_v"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mainColorBlueOneBtn"
            android:layout_toRightOf="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="09-19-2019"
            android:id="@+id/sms_id_v"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            android:textColor="@color/mainColorBlueOneBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_launcher"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sms_id_v"
            android:layout_alignBottom="@+id/thread_date_v" />

        <TextView
            android:text="Message"
            android:id="@+id/thread_text_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/mainColorBlueOneBtn"
            android:maxLines="10"

            android:ellipsize="end"
            android:textSize="16sp"
            android:layout_below="@+id/thread_date_v"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="09-19-2019"
            android:id="@+id/thread_date_v"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            android:textColor="@color/mainColorBlueOneBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:layout_below="@+id/thread_person_v"
            android:layout_toEndOf="@+id/imageView" />

        <ImageView
            android:id="@+id/overflow"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dots"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

</RelativeLayout>
