<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:id="@+id/message_bubble_list_item_right"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/message_bubble_right"
        >

        <TextView
            android:id="@+id/messagesHistoryDateTextItemRight"
            android:textSize="12sp"
            android:textColor="@color/btnColorMainPressed"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/messagesHistoryTextItemRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/mainTextColorDark"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/newMsgsCounter"
        android:text="10 new messages"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:textColor="#6cd0e0"
        android:layout_marginBottom="3dp"
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/divideLineMsgs"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="#abe4ed" />

</LinearLayout>
