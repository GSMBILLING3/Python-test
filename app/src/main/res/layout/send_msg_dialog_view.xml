<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="No number"
        android:background="@drawable/main_toolbar_backgrnd"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/mainColorBlueOneBtn"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android:text="You have no number.  Do You want to send message as SMSHub without response?  Buy number to send messages with response."
        android:textSize="15sp"
        android:textColor="@color/mainColorBlueOneBtn"
        android:padding="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">
        <CheckBox
            android:id="@+id/noNumberCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="16dp"
            android:buttonTint="@color/btnSupportColorMainPressed"
            android:text="Don't show it again"
            android:textColor="#000" />

        <TextView
            android:id="@+id/buyNumberLink"
            android:text="Buy number"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/mainColorRedTwoBtn"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>