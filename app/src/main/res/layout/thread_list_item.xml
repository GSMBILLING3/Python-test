<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thread_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_gravity="center"
    android:background="@drawable/message_bubble"
    >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/mainColorRedTwoBtn"
            android:background="@drawable/user1" />

        <TextView
            android:text="+087986787678"
            android:id="@+id/thread_person"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/mainColorBlueOneBtn"
            android:layout_toRightOf="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="09-19-2019"
            android:id="@+id/thread_date"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:layout_toRightOf="@+id/thread_person"
            android:textColor="@color/mainColorBlueOneBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Message"
            android:layout_marginTop="5dp"
            android:id="@+id/thread_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_below="@+id/thread_person"
            android:layout_toRightOf="@+id/imageView"
            android:textColor="@color/mainColorBlueOneBtn"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            />





</RelativeLayout>
