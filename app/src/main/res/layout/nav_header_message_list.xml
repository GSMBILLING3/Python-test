<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/menuYourNumberTitle"
        android:text="Your number: "
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/menuYourTelNumber"
        android:text=" +48(039)34-995-999"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/menuYourNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/menuYourBalanceTitle"
        android:text="Your balance: "
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorAccent"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@+id/menuYourNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/menuYourBalanceCount"
        android:text="Â£100"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@+id/menuYourBalanceTitle"
        android:layout_below="@+id/menuYourNumberTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    </RelativeLayout>
