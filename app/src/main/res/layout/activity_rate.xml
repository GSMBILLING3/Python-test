<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rates for:"
                android:layout_marginTop="20dp"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                android:textColor="@color/mainColorDarkOne"
                android:textSize="23sp" />

            <AutoCompleteTextView
                android:gravity="center_vertical"
                android:id="@+id/rate_country_name"
                android:layout_gravity="center_vertical"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:completionThreshold="1"
                android:background="@drawable/edit_field_background_style"
                android:hint="UK"
                android:maxLines="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingLeft="16dp"
                android:textColor="@color/mainColorDarkOne"
                android:textColorHint="@color/mainColorDarkOne"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/rate_flag"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/rate_sms_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_sms_rate"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/virtual_number_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_virtual_number"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/menuYourNumberTitle"
                android:text="Your number: "
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorAccent"
                android:layout_toRightOf="@+id/imageView"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/menuYourTelNumber"
                android:text=" +48(039)34-995-999"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/menuYourNumberTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/menuYourBalanceTitle"
                android:text="Your balance: "
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorAccent"
                android:layout_toRightOf="@+id/imageView"
                android:layout_below="@+id/menuYourNumberTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/menuYourBalanceCount"
                android:text="Â£100"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@+id/menuYourBalanceTitle"
                android:layout_below="@+id/menuYourNumberTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>