<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
    <shape android:shape="rectangle">
        <solid android:color="@color/btnColorMainEnableFalse"></solid>
        <corners android:radius="30dp"></corners>
    </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/mainColorRedTwoBtn" android:endColor="@color/mainColorRedOneBtn" android:angle="90"></gradient>
            <corners android:radius="30dp"></corners>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/mainColorRedOneBtn" android:endColor="@color/mainColorRedTwoBtn" android:angle="90"></gradient>
            <corners android:radius="30dp"></corners>
        </shape>
    </item>
</selector>